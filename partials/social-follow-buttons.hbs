    {{/if}}
    {{#if @config.custom.socialGoogleplus}}
        <a href="{{@config.custom.social_googleplus}}" title="Google+" aria-label="Google+">
            <i class="fab fa-google-plus fa-fw fa-lg"></i>
        </a>
